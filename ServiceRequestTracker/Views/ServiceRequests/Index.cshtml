@model IEnumerable<ServiceRequestTracker.Models.ServiceRequest>
@Html.AntiForgeryToken()
<link href="~/css/indexresponsive.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Service Requests";
    var statusFilter = ViewBag.StatusFilter as string;
    var departmentFilter = ViewBag.DepartmentFilter as string;
    var searchText = ViewBag.SearchText as string;
}

<h2 style="color:#29385c;">View & Manage Service Requests</h2>
<form method="get" class="filter-form">
    <div class="filter-group">
        <label>Status:</label>
        <select name="statusFilter">
            <option value="All">All</option>
            <option value="New" selected="@(statusFilter == "New")">New</option>
            <option value="In Progress" selected="@(statusFilter == "In Progress")">In Progress</option>
            <option value="Completed" selected="@(statusFilter == "Completed")">Completed</option>
            <option value="On Hold" selected="@(statusFilter == "On Hold")">On Hold</option>
        </select>
    </div>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <div class="filter-group">
        <label>Department:</label>
        <select name="departmentFilter">
            <option value="All">All</option>
            <option value="IT" selected="@(departmentFilter == "IT")">IT</option>
            <option value="Maintenance" selected="@(departmentFilter == "Maintenance")">Maintenance</option>
            <option value="HR" selected="@(departmentFilter == "HR")">HR</option>
        </select>

    </div>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <div class="filter-group">
        <label>Search (Title/Description):</label>
        <input type="text" name="searchText" value="@searchText" />
    </div>
    <button type="submit" class="btn-primary">Search</button>
    <div class="mt-4 text-end">
        <a href="/ServiceRequests/Index" class="btn btn-outline-secondary btn-lg ms-2 px-4">Reset</a>
    </div> 
    <a style="margin-left:145px;" asp-action="Create" class="btn-primary">Create New Request</a>
</form>
<div class="text-end mb-3" style="text-align:end;">
    <a href="/ServiceRequests/ExportPdf" class="btn btn-dark">
        Download List
    </a>
</div>
<table class="data-table">
    <thead>
        <tr style="background-color: #29385c;">
            <th>Request ID</th>
            <th>Title</th>
            <th>Requester</th>
            <th>Department</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Created On</th>
            <th>Last Updated On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestID</td>
                <td>@item.Title</td>
                <td>@item.RequesterName</td>
                <td>@item.Department</td>
                <td>@item.Priority</td>
                <td>@item.Status</td>
                <td>@item.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.LastUpdatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.RequestID" class="btn btn-primary btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm delete-btn" data-id="@item.RequestID">Delete</button>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).on("click", ".delete-btn", function () {

            var id = $(this).data("id");
            var token = $('input[name="__RequestVerificationToken"]').val();

            Swal.fire({
                title: "Are you sure?",
                text: "This request will be permanently deleted.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {

                if (result.isConfirmed) {

                    $.ajax({
                        url: '/ServiceRequests/DeleteConfirmed',
                        type: 'POST',
                        data: {
                            id: id,
                            __RequestVerificationToken: token
                        },
                        success: function () {
                            Swal.fire("Deleted!", "The request has been deleted.", "success")
                                .then(() => location.reload());
                        },
                        error: function (xhr) {
                            console.log("Error:", xhr.responseText);
                            Swal.fire("Error!", "Deletion failed.", "error");
                        }
                    });

                }
            });
        });
    </script>
}
