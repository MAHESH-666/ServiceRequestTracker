@model ServiceRequestTracker.Models.ServiceRequest

<form id="editForm" asp-action="Edit" method="post">

    <input type="hidden" asp-for="RequestID" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequesterName"></label>
        <input asp-for="RequesterName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Department"></label>
        <select asp-for="Department" class="form-select">
            <option>IT</option>
            <option>Maintenance</option>
            <option>HR</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Priority"></label>
        <select asp-for="Priority" class="form-select">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select">
            <option>New</option>
            <option>In Progress</option>
            <option>Completed</option>
            <option>On Hold</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Submit form with AJAX
        $("#editForm").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: "/ServiceRequests/Edit/" + $("#RequestID").val(),
                type: "POST",
                data: $(this).serialize(),
                success: function (response) {
                    location.reload(); // simplest: reload to show updated data
                }
            });
        });
    </script>
}
