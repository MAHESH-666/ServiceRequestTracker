@model IEnumerable<ServiceRequestTracker.Models.ServiceRequest>

<h2 style="text-align:center;">Service Requests Report</h2>

<table border="1" width="100%" cellspacing="0" cellpadding="5">
    <thead style="background:#29385c;color:white;">
        <tr>
            <th>Request ID</th>
            <th>Title</th>
            <th>Requester</th>
            <th>Department</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Created On</th>
            <th>Last Updated On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestID</td>
                <td>@item.Title</td>
                <td>@item.RequesterName</td>
                <td>@item.Department</td>
                <td>@item.Priority</td>
                <td>@item.Status</td>
                <td>@item.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.LastUpdatedOn.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>